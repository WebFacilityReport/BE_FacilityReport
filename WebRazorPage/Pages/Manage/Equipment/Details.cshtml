        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.ImageEquip)
