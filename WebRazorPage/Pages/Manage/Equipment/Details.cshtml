@page
@model WebRazorPage.Pages.ManagerOffice.Equipment.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="d-flex justify-content-between">
    <div> Hi, @Model.Account.Username. You are @Model.Account.Role</div>
    <div class="btn-group dropstart">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="numNotifications">
            Dropstart
        </button>
