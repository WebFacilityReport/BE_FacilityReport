<div>
    <dl class="row mt-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.EquipmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.EquipmentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment.ResourcesId)
        </dt>
        <dd class="col-sm-10">
