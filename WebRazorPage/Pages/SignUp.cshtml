@page
@model WebRazorPage.Pages.SignUpModel
@{
}

<h1>SIGN UP</h1>
<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div class="form-group  mt-3">
                <label class="control-label">Username</label>
                <input asp-for="RequestAccount.Username" class="form-control" />
                <span asp-validation-for="RequestAccount.Username" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Password</label>
                <input asp-for="RequestAccount.Password" type="password" class="form-control" />
                <span asp-validation-for="RequestAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Email</label>
                <input asp-for="RequestAccount.Email" class="form-control" />
                <span asp-validation-for="RequestAccount.Email" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Birthday</label>
                <input asp-for="RequestAccount.Birthday" type="date" value="@Model.Now" class="form-control" />
                <span asp-validation-for="RequestAccount.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Role</label>
                <select asp-for="Role" asp-items="@Model.SelectListRoleSelect" class="form-control"></select>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Address</label>
                <input asp-for="RequestAccount.Address" class="form-control" />
                <span asp-validation-for="RequestAccount.Address" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="control-label">Phone</label>
                <input asp-for="RequestAccount.Phone" class="form-control" />
                <span asp-validation-for="RequestAccount.Phone" class="text-danger"></span>
            </div>



            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="text-danger">@ViewData["ErrorMessage"]</div>
            }

            <div class="mt-3">
                Do not have any account? <a href="/"> Sign In</a>
                <div class="d-flex gap-3 mt-2">
                    <input type="reset" value="Reset" class="btn btn-outline-dark" />
                    <input type="submit" value="Submit" class="btn btn-dark" />
                </div>
            </div>
        </form>
    </div>
</div>